<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20.0" prefHeight="400.0" prefWidth="600.0"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="vista.pantallaSeleccionModoController">

    <padding>
        <Insets top="50" right="50" bottom="50" left="50"/>
    </padding>

    <Text fill="RED" strokeType="OUTSIDE" strokeWidth="0.0" text="QUE VOS FER?" textAlignment="CENTER">
        <font>
            <Font size="40.0"/>
        </font>
    </Text>

    <Button fx:id="nuevaPartidaBtn" text="Nueva partida" onAction="#handleNewGame" maxWidth="200" prefHeight="81.0" prefWidth="177.0"/>
    <Button fx:id="cargarPartidaBtn" text="Cargar partida" onAction="#handleLoadGame" maxWidth="200" prefHeight="91.0" prefWidth="167.0"/>

</VBox>
