package controlador;

import modelo.Jugador;
import modelo.Casilla;
import java.util.List;

/**
 * Controla el flujo de la partida y la persistencia.
 */
public class gestorPartidas {
    private gestorTablero tablero;
    private List<Jugador> jugadores;
    private int turnoActual;

    // Datos de conexión / encriptación de la BBDD
    private String urlBBDD;
    private String username;
    private String password;

    public gestorPartidas(gestorTablero tablero, List<Jugador> jugadores) {
        this.tablero     = tablero;
        this.jugadores   = jugadores;
        this.turnoActual = 0;
        // Inicializa aquí tu conexión encriptada si hace falta
    }

    public gestorTablero getTablero() {
        return tablero;
    }

    /** Ejecuta un turno: tira dado, mueve al jugador y activa la casilla. */
    public void jugarTurno() {
        Jugador j = jugadores.get(turnoActual);
        int pasos = lanzarDado();          // integra normales / rápidos / lentos
        j.moverPosicion(pasos);
        Casilla cas = tablero.getCasillas().get(j.getPosicion());
        cas.realizarAccion(j, this);
        turnoActual = (turnoActual + 1) % jugadores.size();
        // Aquí podrías serializar el estado en la BBDD encriptada
    }

    private int lanzarDado() {
        // Ejemplo básico, puedes ampliar para dados rápidos/lentos
        return (int)(Math.random() * 6) + 1;
    }
}
