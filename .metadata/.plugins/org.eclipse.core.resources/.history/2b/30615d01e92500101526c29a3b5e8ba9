package vista;

import javafx.fxml.FXML;
import javafx.fxml.FXMLLoader;
import javafx.scene.Scene;
import javafx.scene.control.Spinner;
import javafx.scene.control.SpinnerValueFactory;
import javafx.stage.Stage;

public class ControladorSeleccionJugadores {

    @FXML private Spinner<Integer> spinnerJugadores;

    @FXML
    public void initialize() {
        // Spinner de 1 a 4, valor por defecto 2
        spinnerJugadores.setValueFactory(
            new SpinnerValueFactory.IntegerSpinnerValueFactory(1, 4, 2)
        );
    }

    @FXML
    private void onEjecutar() {
        int num = spinnerJugadores.getValue();

        try {
            // Carga la FXML del juego
            FXMLLoader loader = new FXMLLoader(
                getClass().getResource("/pantallaJuego.fxml")
            );
            Scene scene = new Scene(loader.load());

            // Llama al controlador de la partida para pasarle el número
            vista.pantallaPartida controlador =
                loader.getController();
            controlador.setNumeroJugadores(num);

            Stage juegoStage = new Stage();
            juegoStage.setTitle("Pinguión – Partida");
            juegoStage.setScene(scene);
            juegoStage.show();

            // Cierra la ventana de selección
            spinnerJugadores.getScene().getWindow().hide();
        } catch (Exception ex) {
            ex.printStackTrace();
        }
    }
}
