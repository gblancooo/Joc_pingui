// src/modelo/Casilla.java
package modelo;

/**
 * Simples caselles del taulell.
 * Cada casella té una posició (0–49) i un tipus:
 * "NORMAL", "OSO", "AGUJERO", "TRINEO", "INTERROGANTE".
 */
public class Casilla {
    private int posicion;
    private String tipo;

    public Casilla(int posicion, String tipo) {
        this.posicion = posicion;
        this.tipo = tipo;
    }

    public int getPosicion() {
        return posicion;
    }

    public String getTipo() {
        return tipo;
    }

    public void setTipo(String tipo) {
        this.tipo = tipo;
    }
}
